# OpenAI API configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4
TEMPERATURE=0.7

# Tool paths (comment out to use system PATH)
#NMAP_PATH=/usr/local/bin/nmap
#GOBUSTER_PATH=/usr/local/bin/gobuster
#FFUF_PATH=/usr/local/bin/ffuf
#SQLMAP_PATH=/usr/local/bin/sqlmap

# Tool timeout settings (in seconds)
DEFAULT_TIMEOUT=300
NMAP_TIMEOUT=600
GOBUSTER_TIMEOUT=300
FFUF_TIMEOUT=300
SQLMAP_TIMEOUT=600

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT="<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>"
